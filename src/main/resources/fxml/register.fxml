<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" styleClass="register-page"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartmedicare.controllers.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Registration" styleClass="title-label"/>
    
    <ScrollPane fitToWidth="true">
        <GridPane vgap="10" hgap="10" alignment="CENTER">
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Full Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Contact:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="contactField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            
            <VBox fx:id="patientFields" visible="false" managed="false" GridPane.rowIndex="6" GridPane.columnSpan="2">
                <Label text="Date of Birth:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dobPicker" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                
                <Label text="Gender:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="genderComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                
                <Label text="Blood Group:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <ComboBox fx:id="bloodGroupComboBox" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </VBox>
            
            <VBox fx:id="doctorFields" visible="false" managed="false" GridPane.rowIndex="6" GridPane.columnSpan="2">
                <Label text="Specialization:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="specializationField"/>
                
                <Label text="Schedule:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextArea fx:id="scheduleArea" prefRowCount="3"/>
            </VBox>
        </GridPane>
    </ScrollPane>

    <VBox alignment="CENTER" spacing="10">
        <Button text="Register" onAction="#handleRegister" styleClass="action-button"/>
        <Button text="Back to Login" onAction="#handleBack" styleClass="secondary-button"/>
    </VBox>

    <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
</VBox>
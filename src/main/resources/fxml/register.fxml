<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane styleClass="register-page" stylesheets="@../css/styles.css"
           xmlns:fx="http://javafx.com/fxml" fx:controller="com.smartmedicare.controllers.RegisterController">
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="20" maxWidth="600" styleClass="card">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="30"/>
                </padding>

                <Label text="ðŸ¥ Registration" styleClass="title-label"/>
                
                <ScrollPane fitToWidth="true" styleClass="transparent-scroll" maxWidth="500">
                    <VBox spacing="15" alignment="CENTER">
                        <GridPane vgap="15" hgap="20" alignment="CENTER" maxWidth="450">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="250" prefWidth="280"/>
                            </columnConstraints>
                            
                            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field" prefHeight="40"/>
                            
                            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="password-field" prefHeight="40"/>
                            
                            <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="password-field" prefHeight="40"/>
                            
                            <Label text="Full Name:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field" prefHeight="40"/>
                            
                            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text-field" prefHeight="40"/>
                            
                            <Label text="Contact:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="subtitle-label"/>
                            <TextField fx:id="contactField" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="text-field" prefHeight="40"/>
                        </GridPane>
                        
                        <VBox fx:id="patientFields" visible="false" managed="false" spacing="15" alignment="CENTER" maxWidth="400">
                            <HBox spacing="20" alignment="CENTER">
                                <Label text="Date of Birth:" styleClass="subtitle-label" minWidth="120"/>
                                <DatePicker fx:id="dobPicker" styleClass="combo-box" prefHeight="40" prefWidth="280"/>
                            </HBox>
                            
                            <HBox spacing="20" alignment="CENTER">
                                <Label text="Gender:" styleClass="subtitle-label" minWidth="120"/>
                                <ComboBox fx:id="genderComboBox" styleClass="combo-box" prefHeight="40" prefWidth="280"/>
                            </HBox>
                            
                            <HBox spacing="20" alignment="CENTER">
                                <Label text="Blood Group:" styleClass="subtitle-label" minWidth="120"/>
                                <ComboBox fx:id="bloodGroupComboBox" styleClass="combo-box" prefHeight="40" prefWidth="280"/>
                            </HBox>
                        </VBox>
                        
                        <VBox fx:id="doctorFields" visible="false" managed="false" spacing="15" alignment="CENTER" maxWidth="400">
                            <HBox spacing="20" alignment="CENTER">
                                <Label text="Specialization:" styleClass="subtitle-label" minWidth="120"/>
                                <TextField fx:id="specializationField" styleClass="text-field" prefHeight="40" prefWidth="280"/>
                            </HBox>
                            
                            <VBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="Schedule:" styleClass="subtitle-label"/>
                                <TextArea fx:id="scheduleArea" prefRowCount="3" styleClass="text-area" prefWidth="400"/>
                            </VBox>
                        </VBox>
                    </VBox>
                </ScrollPane>

                <HBox spacing="15" alignment="CENTER">
                    <Button text="Back" onAction="#handleBack" styleClass="secondary-button" prefWidth="100" prefHeight="45"/>
                    <Button text="Register" onAction="#handleRegister" styleClass="primary-button" prefWidth="150" prefHeight="45"/>
                </HBox>

                <Label fx:id="messageLabel" styleClass="error-label" visible="false" wrapText="true" 
                       maxWidth="450" textAlignment="CENTER"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
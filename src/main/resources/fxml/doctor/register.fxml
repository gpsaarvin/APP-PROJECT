<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="register-page" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smartmedicare.controllers.RegisterController">
    
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="25" maxWidth="600" styleClass="card">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="ðŸ©º Doctor Registration" styleClass="title-label"/>
                    <Label text="Join our medical team" styleClass="subtitle-label"/>
                </VBox>

                <!-- Form Container -->
                <ScrollPane fitToWidth="true" styleClass="transparent-scroll" maxWidth="500" maxHeight="400">
                    <VBox spacing="20" alignment="CENTER">
                        
                        <!-- Basic Information -->
                        <GridPane vgap="15" hgap="20" alignment="CENTER" maxWidth="450">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="250" prefWidth="280"/>
                            </columnConstraints>
                            
                            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                                      styleClass="text-field" prefHeight="40" promptText="Choose a username"/>
                            
                            <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                          styleClass="password-field" prefHeight="40" promptText="Enter password"/>
                            
                            <Label text="Confirm Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                          styleClass="password-field" prefHeight="40" promptText="Confirm password"/>
                            
                            <Label text="Full Name:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <TextField fx:id="nameField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                                      styleClass="text-field" prefHeight="40" promptText="Enter your full name"/>
                            
                            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                                      styleClass="text-field" prefHeight="40" promptText="Enter your email"/>
                            
                            <Label text="Contact:" GridPane.rowIndex="5" GridPane.columnIndex="0" 
                                   styleClass="subtitle-label" GridPane.valignment="CENTER"/>
                            <TextField fx:id="contactField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                                      styleClass="text-field" prefHeight="40" promptText="Enter contact number"/>
                        </GridPane>

                        <!-- Doctor Specific Fields -->
                        <VBox fx:id="doctorFields" spacing="15" alignment="CENTER" maxWidth="400">
                            <HBox spacing="20" alignment="CENTER">
                                <Label text="Specialization:" styleClass="subtitle-label" minWidth="120"/>
                                <TextField fx:id="specializationField" styleClass="text-field" 
                                          prefHeight="40" prefWidth="280" promptText="e.g., Cardiology, Neurology"/>
                            </HBox>
                            
                            <VBox spacing="8" alignment="CENTER">
                                <Label text="Working Hours:" styleClass="subtitle-label"/>
                                <TextArea fx:id="scheduleArea" prefRowCount="3" styleClass="text-area" 
                                         prefWidth="400" promptText="Enter your working hours (e.g., Mon-Fri 9AM-5PM)"/>
                            </VBox>
                        </VBox>
                    </VBox>
                </ScrollPane>

                <!-- Action Buttons -->
                <HBox spacing="15" alignment="CENTER" maxWidth="350">
                    <Button text="Back" onAction="#handleBack" styleClass="secondary-button" 
                           prefWidth="120" prefHeight="45"/>
                    <Button text="Register" onAction="#handleRegister" styleClass="primary-button" 
                           prefWidth="150" prefHeight="45"/>
                </HBox>

                <!-- Error Message -->
                <Label fx:id="messageLabel" styleClass="error-label" visible="false" wrapText="true" 
                       maxWidth="450" textAlignment="CENTER"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
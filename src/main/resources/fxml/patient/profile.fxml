<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" styleClass="content-panel" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.smartmedicare.controllers.patient.ProfileController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Patient Profile" styleClass="page-title"/>
    
    <!-- Personal Information Section -->
    <GridPane vgap="10" hgap="10" styleClass="form-grid">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Date of Birth:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dobPicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Gender:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="genderCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Blood Group:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="bloodGroupCombo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        
        <Label text="Address:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextArea fx:id="addressArea" prefRowCount="3" wrapText="true"
                  GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>
    
    <!-- Emergency Contact Section -->
    <TitledPane text="Emergency Contact">
        <GridPane vgap="10" hgap="10" styleClass="form-grid">
            <Label text="Contact Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="emergencyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Relationship:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="relationshipField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Contact Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emergencyPhoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </TitledPane>
    
    <!-- Medical Information Section -->
    <TitledPane text="Medical Information">
        <VBox spacing="10">
            <Label text="Allergies:"/>
            <TextArea fx:id="allergiesArea" prefRowCount="2" wrapText="true"/>
            
            <Label text="Current Medications:"/>
            <TextArea fx:id="medicationsArea" prefRowCount="2" wrapText="true"/>
            
            <Label text="Medical Conditions:"/>
            <TextArea fx:id="conditionsArea" prefRowCount="2" wrapText="true"/>
        </VBox>
    </TitledPane>
    
    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
        <Button text="Save Changes" onAction="#handleSave" styleClass="primary-button"/>
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-label" wrapText="true"/>
</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="login-page" stylesheets="@../../css/styles.css"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.smartmedicare.controllers.LoginController">
    
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="25" maxWidth="450" maxHeight="600" styleClass="card">
                <padding>
                    <Insets top="40" right="50" bottom="40" left="50"/>
                </padding>

                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="🏥 Smart Medicare" styleClass="title-label"/>
                    <Label fx:id="userTypeLabel" text="Patient Login" styleClass="subtitle-label"/>
                    <Label text="Welcome back!" styleClass="subtitle-label"/>
                </VBox>

                <!-- Form Section -->
                <VBox spacing="20" alignment="CENTER" prefWidth="350" maxWidth="350">
                    <VBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="Username" styleClass="subtitle-label"/>
                        <TextField fx:id="usernameField" promptText="Enter your username" 
                                  styleClass="text-field" prefHeight="45" maxWidth="350"/>
                    </VBox>
                    
                    <VBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="Password" styleClass="subtitle-label"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                      styleClass="password-field" prefHeight="45" maxWidth="350"/>
                    </VBox>
                </VBox>

                <!-- Button Section -->
                <VBox spacing="15" alignment="CENTER" prefWidth="350" maxWidth="350">
                    <Button text="Login" onAction="#handleLogin" styleClass="login-button" 
                           defaultButton="true" prefWidth="350" prefHeight="50"/>
                    
                    <HBox spacing="15" alignment="CENTER">
                        <Hyperlink text="New patient? Register here" onAction="#handleRegisterNavigation" 
                                  styleClass="subtitle-label"/>
                    </HBox>
                    
                    <Button text="Back to Main Menu" onAction="#handleBack" styleClass="secondary-button" 
                           prefWidth="200" prefHeight="40"/>
                </VBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true" 
                       maxWidth="350" textAlignment="CENTER"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>